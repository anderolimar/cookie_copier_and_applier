{
  "manifest_version": 3,
  "name": "Cookie Copier & Applier",
  "version": "1.0.0",
  "description": "Copies cookie values ​​by configured names and applies them to another page via the context menu.",
  "permissions": [
    "contextMenus",
    "cookies",
    "storage",
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}